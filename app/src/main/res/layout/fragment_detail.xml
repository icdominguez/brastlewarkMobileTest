<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetailFragment"
    android:background="?attr/colorOnPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivInhabitant"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:text="Name"
        style="@style/MyTextViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivInhabitant" />

    <TextView
        android:id="@+id/textViewName"
        style="@style/MyTextViewDescription"
        android:text="Tobus Quickwhistle"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <View
        android:id="@+id/tile_divider"
        style="@style/MyDivider"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        style="@style/MyTextViewTitle"
        android:text="Age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tile_divider" />

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textViewAge"
        style="@style/MyTextViewDescription"
        android:text="306"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <View
        android:id="@+id/tile_divider2"
        style="@style/MyDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAge" />

    <TextView
        android:id="@+id/textView"
        style="@style/MyTextViewTitle"
        android:text="Professions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tile_divider2" />

    <TextView
        android:id="@+id/textViewProfessions"
        style="@style/MyTextViewDescription"
        android:text="Metalworker, WoodCarver, Stonecarver"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/tile_divider3"
        style="@style/MyDivider"
        app:layout_constraintTop_toBottomOf="@id/textViewProfessions"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/MyTextViewTitle"
        android:text="Friends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tile_divider3" />

    <TextView
        android:id="@+id/textViewFriends"
        style="@style/MyTextViewDescription"
        android:text="Cogwitz"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <View
        android:id="@+id/tile_divider4"
        style="@style/MyDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFriends"/>


    <TextView
        android:id="@+id/textViewHairColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair color"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@+id/textViewFriends"
        app:layout_constraintTop_toBottomOf="@+id/tile_divider4" />


    <ImageView
        android:id="@+id/imageViewColorHair"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHairColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewHairColor"
        android:layout_marginRight="5dp"/>

    <View
        android:layout_width="match_parent"
        style="@style/MyDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHairColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>